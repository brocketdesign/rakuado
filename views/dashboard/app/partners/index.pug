        function formatDate(dateStr) {
            if (!dateStr) return '';
            const date = new Date(dateStr);
            return date.toLocaleDateString('ja-JP');
        }

        function formatDateInput(dateStr) {
            if (!dateStr) return '';
            const date = new Date(dateStr);
            return date.toISOString().split('T')[0];
        }

        async function recalculateActiveDays() {
            const btn = document.getElementById('recalculate-btn');
            const statusEl = document.getElementById('recalculate-status');
            const originalHtml = btn.innerHTML;
            
            try {
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>計算中...';
                statusEl.textContent = '稼働日数を再計算しています...';
                
                const response = await fetch('/api/partners/payments/recalculate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ period: currentPeriod })
                });
                
                const data = await response.json();
                
                if (!data.success) throw new Error(data.error);
                
                statusEl.textContent = `✓ ${data.results.length}件のパートナーを処理しました`;
                statusEl.className = 'text-success small ms-2';
                
                // Reload payments to show updated data
                setTimeout(() => {
                    loadPayments();
                    statusEl.textContent = '';
                    statusEl.className = 'text-muted small ms-2';
                }, 2000);
                
                showAlert('稼働日数の再計算が完了しました', 'success');
                
            } catch (error) {
                console.error('Error recalculating:', error);
                statusEl.textContent = 'エラーが発生しました';
                statusEl.className = 'text-danger small ms-2';
                showAlert('再計算に失敗しました: ' + error.message, 'danger');
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalHtml;
            }
        }
