    script.
        let currentPeriod = 'current';
        let historyChart = null;

        document.addEventListener('DOMContentLoaded', function() {
            loadPayments();
            loadHistory();
            
            // Period buttons
            document.getElementById('current-period-btn').addEventListener('click', () => setActivePeriod('current'));
            document.getElementById('previous-period-btn').addEventListener('click', () => setActivePeriod('previous'));
            
            // Tab buttons
            document.getElementById('payments-tab').addEventListener('click', () => setActiveTab('payments'));
            document.getElementById('history-tab').addEventListener('click', () => setActiveTab('history'));
            
            // Recalculate button
            document.getElementById('recalculate-btn').addEventListener('click', recalculateActiveDays);
            
            // Search functionality
            const searchInput = document.getElementById('partner-search');
            const clearBtn = document.getElementById('clear-search');
            
            if (searchInput) {
                // Debounced search on input
                const debouncedSearch = debounce((value) => searchPartners(value), 300);
                searchInput.addEventListener('input', (e) => debouncedSearch(e.target.value));
                
                // Clear search on Escape key
                searchInput.addEventListener('keydown', (e) => {
                    if (e.key === 'Escape') {
                        searchInput.value = '';
                        searchPartners('');
                        searchInput.blur();
                    }
                });
            }
            
            if (clearBtn) {
                clearBtn.addEventListener('click', () => {
                    searchInput.value = '';
                    searchPartners('');
                    searchInput.focus();
                });
            }
        });

        function setActivePeriod(period) {
            currentPeriod = period;
            document.querySelectorAll('.period-btn').forEach(btn => {
                btn.classList.remove('active', 'btn-primary');
                btn.classList.add('btn-outline-primary');
            });
            const activeBtn = period === 'current' ? 
                document.getElementById('current-period-btn') : 
                document.getElementById('previous-period-btn');
            activeBtn.classList.remove('btn-outline-primary');
            activeBtn.classList.add('btn-primary', 'active');
            loadPayments();
        }

        function setActiveTab(tab) {
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            document.getElementById(`${tab}-tab`).classList.add('active');
            document.getElementById(`${tab}-view`).classList.add('active');
            
            if (tab === 'history') loadHistory();
        }

        function showAlert(message, type = 'success') {
            const container = document.getElementById('alert-container');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show`;
            alert.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'danger' ? 'exclamation-circle' : 'info-circle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            container.appendChild(alert);
            setTimeout(() => alert.remove(), 5000);
        }

        async function loadPayments() {
            try {
                const response = await fetch(`/api/partners/payments/calculate?period=${currentPeriod}`);
                const data = await response.json();
                
                if (!data.success) throw new Error(data.error);
                
                // Update period info
                document.getElementById('period-info').textContent = 
                    `期間: ${data.period.startDate} ~ ${data.period.endDate}`;
                document.getElementById('total-payment').textContent = 
                    `¥${data.totalPayment.toLocaleString()}`;
                
                // Update summary cards
                const activePartners = data.payments.filter(p => p.status === 'active').length;
                const partialPartners = data.payments.filter(p => p.status === 'partial').length;
                const stoppedPartners = data.payments.filter(p => p.status === 'stopped').length;
                const confirmedPayments = data.payments.filter(p => p.paymentConfirmed && p.amount > 0).length;
                const pendingPayments = data.payments.filter(p => !p.paymentConfirmed && p.amount > 0).length;
                
                document.getElementById('payment-summary-cards').innerHTML = `
                    <div class="col-md-6 col-lg-3">
                        <div class="summary-card">
                            <div class="summary-icon bg-primary bg-opacity-10 text-primary">
                                <i class="fas fa-yen-sign"></i>
                            </div>
                            <div class="summary-value">¥${data.totalPayment.toLocaleString()}</div>
                            <div class="summary-label">総支払予定額</div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="summary-card">
                            <div class="summary-icon bg-success bg-opacity-10 text-success">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="summary-value">${confirmedPayments}</div>
                            <div class="summary-label">支払い済み</div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="summary-card">
                            <div class="summary-icon bg-warning bg-opacity-10 text-warning">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="summary-value">${pendingPayments}</div>
                            <div class="summary-label">支払い待ち</div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="summary-card">
                            <div class="summary-icon bg-info bg-opacity-10 text-info">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="summary-value">${activePartners + partialPartners}</div>
                            <div class="summary-label">稼働パートナー</div>
                        </div>
                    </div>
                `;
                
                // Store payments data for search filtering
                window.allPaymentsData = data.payments;
                window.currentPeriodKey = `${data.period.startDate}_${data.period.endDate}`;
                
                // Render payments table
                renderPaymentsTable(data.payments, window.currentPeriodKey);
            } catch (error) {
                console.error('Error loading payments:', error);
                showAlert('支払い情報の読み込みに失敗しました', 'danger');
            }
        }
        
        function renderPaymentsTable(payments, periodKey) {
            const tbody = document.getElementById('payments-table-body');
            tbody.innerHTML = payments.map((p, i) => `
                    <tr>
                        <td class="py-3 px-3">${i + 1}</td>
                        <td class="py-3 px-3">
                            <a href="https://${p.domain}" target="_blank" class="text-decoration-none">
                                ${p.domain}
                                <i class="fas fa-external-link-alt ms-1 small"></i>
                            </a>
                        </td>
                        <td class="py-3 px-3">
                            <strong>${p.name}</strong>
                            ${p.nameKatakana ? `<br><small class="text-muted">${p.nameKatakana}</small>` : ''}
                        </td>
                        <td class="py-3 px-3">¥${p.monthlyAmount.toLocaleString()}</td>
                        <td class="py-3 px-3">${p.daysActive} / ${p.totalDays}日</td>
                        <td class="py-3 px-3 fw-bold">¥${p.amount.toLocaleString()}</td>
                        <td class="py-3 px-3">
                            <span class="status-badge status-${p.status}">
                                ${getStatusLabel(p.status)}
                            </span>
                        </td>
                        <td class="py-3 px-3">${p.paymentCycle}</td>
                        <td class="py-3 px-3 text-center">
                            <div class="form-check d-flex justify-content-center">
                                <input class="form-check-input payment-confirmed-checkbox" 
                                       type="checkbox" 
                                       id="confirmed-${p.partnerId}" 
                                       data-partner-id="${p.partnerId}"
                                       data-period-key="${periodKey}"
                                       ${p.paymentConfirmed ? 'checked' : ''}
                                       onchange="togglePaymentConfirmation(this)">
                            </div>
                        </td>
                    </tr>
                `).join('');
        }
        
        // Katakana to Hiragana conversion for flexible search
        function katakanaToHiragana(str) {
            return str.replace(/[\u30A1-\u30F6]/g, function(match) {
                return String.fromCharCode(match.charCodeAt(0) - 0x60);
            });
        }
        
        // Hiragana to Katakana conversion
        function hiraganaToKatakana(str) {
            return str.replace(/[\u3041-\u3096]/g, function(match) {
                return String.fromCharCode(match.charCodeAt(0) + 0x60);
            });
        }
        
        // Normalize Japanese text for search (convert to lowercase, normalize kana)
        function normalizeForSearch(str) {
            if (!str) return '';
            // Convert to lowercase and normalize
            let normalized = str.toLowerCase().trim();
            // Convert full-width alphanumeric to half-width
            normalized = normalized.replace(/[\uFF10-\uFF19\uFF21-\uFF3A\uFF41-\uFF5A]/g, function(ch) {
                return String.fromCharCode(ch.charCodeAt(0) - 0xFEE0);
            });
            return normalized;
        }
        
        // Escape HTML to prevent XSS
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        // Update search results info
        function updateSearchInfo(filtered, total) {
            const searchInfo = document.getElementById('search-results-info');
            if (searchInfo) {
                if (filtered === total) {
                    searchInfo.textContent = `${total}件のパートナー`;
                } else {
                    searchInfo.textContent = `${filtered}件表示 / ${total}件中`;
                }
            }
        }
        
        // Search partners with Katakana/Kanji support
        function searchPartners(query) {
            if (!window.allPaymentsData) return;
            
            const searchInput = document.getElementById('partner-search');
            const clearBtn = document.getElementById('clear-search');
            const normalizedQuery = normalizeForSearch(query);
            
            // Toggle clear button visibility
            if (clearBtn) {
                clearBtn.style.display = normalizedQuery ? 'block' : 'none';
            }
            if (normalizedQuery) {
                searchInput.classList.add('has-value');
            } else {
                searchInput.classList.remove('has-value');
            }
            
            if (!normalizedQuery) {
                renderPaymentsTable(window.allPaymentsData, window.currentPeriodKey);
                updateSearchInfo(window.allPaymentsData.length, window.allPaymentsData.length);
                return;
            }
            
            // Create search variants (original, hiragana, katakana)
            const hiraganaQuery = katakanaToHiragana(normalizedQuery);
            const katakanaQuery = hiraganaToKatakana(normalizedQuery);
            
            const filtered = window.allPaymentsData.filter(p => {
                const name = normalizeForSearch(p.name || '');
                const nameKatakana = normalizeForSearch(p.nameKatakana || '');
                const domain = normalizeForSearch(p.domain || '');
                
                // Check against all variants
                const searchTerms = [normalizedQuery, hiraganaQuery, katakanaQuery];
                
                return searchTerms.some(term => 
                    name.includes(term) || 
                    nameKatakana.includes(term) || 
                    domain.includes(term) ||
                    // Also check if the query in katakana matches the name (for Kanji->Katakana search)
                    (nameKatakana && katakanaToHiragana(nameKatakana).includes(hiraganaQuery))
                );
            });
            
            renderPaymentsTable(filtered, window.currentPeriodKey);
            updateSearchInfo(filtered.length, window.allPaymentsData.length);
            
            // Show no results message if needed
            const tbody = document.getElementById('payments-table-body');
            if (filtered.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="9" class="no-results">
                            <i class="fas fa-search mb-3" style="font-size: 2rem; opacity: 0.5;"></i>
                            <p class="mb-0">「${escapeHtml(query)}」に一致するパートナーが見つかりませんでした</p>
                            <small class="text-muted">カタカナ、漢字、またはドメイン名で検索してください</small>
                        </td>
                    </tr>
                `;
            }
        }
        
        // Debounce function for search input
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        async function loadHistory() {
            try {
                const response = await fetch('/api/partners/payments/history?months=6');
                const data = await response.json();
                
                if (!data.success) throw new Error(data.error);
                
                // Update history chart
                updateHistoryChart(data.periods);
                
                // Update history table
                const tbody = document.getElementById('history-table-body');
                tbody.innerHTML = data.periods.map(p => `
                    <tr>
                        <td class="py-3 px-4">${p.periodName}</td>
                        <td class="py-3 px-4">${p.startDate}</td>
                        <td class="py-3 px-4">${p.endDate}</td>
                        <td class="py-3 px-4">${p.payments.filter(pay => pay.amount > 0).length}</td>
                        <td class="py-3 px-4 fw-bold">¥${p.total.toLocaleString()}</td>
                    </tr>
                `).join('');
                
            } catch (error) {
                console.error('Error loading history:', error);
                showAlert('履歴の読み込みに失敗しました', 'danger');
            }
        }

        function updateHistoryChart(periods) {
            const ctx = document.getElementById('history-chart').getContext('2d');
            
            if (historyChart) historyChart.destroy();
            
            const reversedPeriods = [...periods].reverse();
            
            historyChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: reversedPeriods.map(p => p.periodName),
                    datasets: [{
                        label: '総支払額',
                        data: reversedPeriods.map(p => p.total),
                        backgroundColor: 'rgba(102, 126, 234, 0.8)',
                        borderColor: 'rgb(102, 126, 234)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: '月別支払い推移'
                        },
                        legend: {
                            position: 'top'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: value => '¥' + value.toLocaleString()
                            }
                        }
                    }
                }
            });
        }

        function getStatusLabel(status) {
            const labels = {
                'active': '稼働中',
                'partial': '日割り',
                'stopped': '停止',
                'pending': '保留',
                'inactive': '非稼働',
                'not_started': '未開始'
            };
            return labels[status] || status;
        }

        async function recalculateActiveDays() {
            const btn = document.getElementById('recalculate-btn');
            const statusEl = document.getElementById('recalculate-status');
            const originalHtml = btn.innerHTML;
            
            try {
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>計算中...';
                statusEl.textContent = '稼働日数を再計算しています...';
                
                const response = await fetch('/api/partners/payments/recalculate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ period: currentPeriod })
                });
                
                const data = await response.json();
                
                if (!data.success) throw new Error(data.error);
                
                statusEl.textContent = `✓ ${data.results.length}件のパートナーを処理しました`;
                statusEl.className = 'text-success small ms-2';
                
                // Reload payments to show updated data
                setTimeout(() => {
                    loadPayments();
                    statusEl.textContent = '';
                    statusEl.className = 'text-muted small ms-2';
                }, 2000);
                
                showAlert('稼働日数の再計算が完了しました', 'success');
                
            } catch (error) {
                console.error('Error recalculating:', error);
                statusEl.textContent = 'エラーが発生しました';
                statusEl.className = 'text-danger small ms-2';
                showAlert('再計算に失敗しました: ' + error.message, 'danger');
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalHtml;
            }
        }

