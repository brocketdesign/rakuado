                const response = await fetch('/api/partners/payments/confirm', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ partnerId, periodKey, confirmed })
                });
                
                const data = await response.json();
                
                if (!data.success) throw new Error(data.error);
                
                showAlert(confirmed ? '支払い完了としてマークしました' : '支払い未完了としてマークしました', 'success');
                
            } catch (error) {
