extends ../../base

block mainContent
    script(src="https://cdn.jsdelivr.net/npm/chart.js")
    
    // Hero Section
    .hero-section.mb-5
        .container
            .row.align-items-center
                .col-md-8
                    h1.display-4.fw-bold.mb-3 
                        i.fas.fa-handshake.me-3
                        span 管理者ツール - パートナー支払い管理
                    p.lead Partner Payment Management - パートナーの支払いを計算・管理するツール
                .col-md-4.text-end
                    .stats-card.bg-white.text-dark.p-4.rounded-3.shadow
                        h3.mb-1#total-payment ¥0
                        small 今期の総支払予定額

    // Alert Messages
    #alert-container.container.mb-4

    // Period Controls Section
    section.period-controls-section.mb-5
        .container
            .card.border-0.shadow-sm
                .card-header.bg-white.border-0.pb-0
                    h5.fw-bold.mb-0
                        i.fas.fa-calendar-alt.me-2.text-primary
                        | 期間選択 / Period Selection
                .card-body
                    .row.align-items-center
                        .col-auto
                            .btn-group(role="group")
                                button#current-period-btn.btn.btn-primary.period-btn.active
                                    | 現在の期間 / Current Period
                                button#previous-period-btn.btn.btn-outline-primary.period-btn
                                    | 前期間 / Previous Period
                        .col-auto
                            span#period-info.text-muted.small
                        .col-auto
                            button#recalculate-btn.btn.btn-outline-info
                                i.fas.fa-sync-alt.me-2
                                | 今すぐ再計算 / Recalculate Now
                            span#recalculate-status.text-muted.small.ms-2

    // Tab Navigation
    section.partners-content.mb-5
        .container
            .card.border-0.shadow-sm
                .card-header.bg-white.border-0
                    .d-flex.justify-content-between.align-items-center.flex-wrap.gap-2
                        .nav.nav-tabs.border-0
                            button#payments-tab.nav-link.active.tab-button
                                i.fas.fa-yen-sign.me-2
                                | 支払い計算 / Payment Calculations
                            button#partners-tab.nav-link.tab-button
                                i.fas.fa-users.me-2
                                | パートナー一覧 / Partner List
                            button#history-tab.nav-link.tab-button
                                i.fas.fa-history.me-2
                                | 履歴 / History
                        button#add-partner-btn.btn.btn-success
                            i.fas.fa-plus.me-2
                            | 新規パートナー追加

                .card-body.p-0
                    // Payments View
                    #payments-view.tab-content.active.p-4
                        .mb-4
                            .alert.alert-info.border-0
                                i.fas.fa-info-circle.me-2
                                strong 計算方法:
                                |  各パートナーの月額料金を期間の日数で割り、実際に稼働した日数分を計算します。
                                br
                                strong 稼働日数の判定:
                                |  アナリティクスデータを確認し、その日にビュー数またはクリック数が1以上ある場合のみ稼働日としてカウントします。
                                |  データがない日は稼働日としてカウントされません。
                                br
                                small.text-muted 注: データは毎日自動的に再計算されます。手動で再計算する場合は「今すぐ再計算」ボタンをクリックしてください。
                        
                        // Payment Summary Cards
                        .row.g-4.mb-4#payment-summary-cards
                        
                        // Payment Table
                        .card.border-0.shadow-sm
                            .card-header.bg-white
                                h5.fw-bold.mb-0
                                    i.fas.fa-table.me-2.text-secondary
                                    | 支払い明細 / Payment Details
                            .card-body.p-0
                                .table-responsive
                                    table#payments-table.table.table-hover.mb-0
                                        thead.table-light
                                            tr
                                                th.fw-bold #
                                                th.fw-bold サイト
                                                th.fw-bold パートナー名
                                                th.fw-bold 月額
                                                th.fw-bold 稼働日数
                                                th.fw-bold 支払額
                                                th.fw-bold ステータス
                                                th.fw-bold 支払サイクル
                                        tbody#payments-table-body

                    // Partners List View
                    #partners-view.tab-content.p-4
                        .mb-4
                            .alert.alert-secondary.border-0
                                i.fas.fa-info-circle.me-2
                                | パートナー情報を管理します。クリックして詳細を編集できます。
                        
                        .row.g-4#partners-cards

                    // History View
                    #history-view.tab-content.p-4
                        .mb-4
                            .alert.alert-secondary.border-0
                                i.fas.fa-info-circle.me-2
                                | 過去6ヶ月分の支払い履歴と予測を表示します。
                        
                        // History Chart
                        .card.bg-light.border-0.mb-4
                            .card-body
                                .chart-container(style="position: relative; height: 400px;")
                                    canvas#history-chart
                        
                        // History Table
                        .card.border-0.shadow-sm
                            .card-header.bg-white
                                h5.fw-bold.mb-0
                                    i.fas.fa-calendar.me-2.text-secondary
                                    | 月別支払い履歴
                            .card-body.p-0
                                .table-responsive
                                    table.table.table-hover.mb-0
                                        thead.table-light
                                            tr
                                                th.fw-bold 期間
                                                th.fw-bold 開始日
                                                th.fw-bold 終了日
                                                th.fw-bold パートナー数
                                                th.fw-bold 総支払額
                                        tbody#history-table-body

    // Partner Modal
    .modal.fade#partner-modal(tabindex="-1")
        .modal-dialog.modal-lg
            .modal-content
                .modal-header.bg-primary.text-white
                    h5.modal-title#partner-modal-title
                        i.fas.fa-user-edit.me-2
                        | パートナー情報
                    button.btn-close.btn-close-white(type="button" data-bs-dismiss="modal")
                .modal-body
                    form#partner-form
                        input#partner-id(type="hidden")
                        
                        // Basic Info Section
                        .mb-4
                            h6.fw-bold.text-primary.border-bottom.pb-2
                                i.fas.fa-globe.me-2
                                | 基本情報 / Basic Information
                            .row.g-3
                                .col-md-6
                                    label.form-label.required ドメイン / Domain
                                    input#partner-domain.form-control(type="text" required placeholder="example.com")
                                    .form-text サイトのドメイン名
                                .col-md-6
                                    label.form-label.required パートナー名 / Name
                                    input#partner-name.form-control(type="text" required placeholder="株式会社〇〇")
                                .col-md-6
                                    label.form-label フリガナ / Name (Katakana)
                                    input#partner-name-katakana.form-control(type="text" placeholder="カブシキガイシャ〇〇")
                                .col-md-6
                                    label.form-label.required 月額料金 / Monthly Amount
                                    .input-group
                                        span.input-group-text ¥
                                        input#partner-monthly-amount.form-control(type="number" required placeholder="10000")
                        
                        // Contract Info Section
                        .mb-4
                            h6.fw-bold.text-primary.border-bottom.pb-2
                                i.fas.fa-file-contract.me-2
                                | 契約情報 / Contract Information
                            .row.g-3
                                .col-md-4
                                    label.form-label.required ステータス / Status
                                    select#partner-status.form-select
                                        option(value="active") 稼働中 / Active
                                        option(value="stopped") 停止 / Stopped
                                        option(value="pending") 保留 / Pending
                                        option(value="inactive") 非稼働 / Inactive
                                    .form-text パートナーのステータス
                                .col-md-4
                                    label.form-label.required 支払サイクル / Payment Cycle
                                    select#partner-payment-cycle.form-select
                                        option(value="当月") 当月払い
                                        option(value="翌月") 翌月払い
                                    .form-text 支払いタイミング
                                .col-md-4
                                    label.form-label.required 開始日 / Start Date
                                    input#partner-start-date.form-control(type="date" required)
                                .col-md-4
                                    label.form-label 終了日 / Stop Date
                                    input#partner-stop-date.form-control(type="date")
                                    .form-text 空欄=継続中
                        
                        // Contact Info Section
                        .mb-4
                            h6.fw-bold.text-primary.border-bottom.pb-2
                                i.fas.fa-address-book.me-2
                                | 連絡先情報 / Contact Information
                            .row.g-3
                                .col-md-6
                                    label.form-label メールアドレス / Email
                                    input#partner-email.form-control(type="email" placeholder="contact@example.com")
                                .col-md-6
                                    label.form-label 電話番号 / Phone
                                    input#partner-phone.form-control(type="tel" placeholder="03-1234-5678")
                                .col-12
                                    label.form-label 住所 / Address
                                    textarea#partner-address.form-control(rows="2" placeholder="〒100-0000 東京都...")
                        
                        // Bank Info Section
                        .mb-4
                            h6.fw-bold.text-primary.border-bottom.pb-2
                                i.fas.fa-university.me-2
                                | 銀行情報 / Bank Information
                            .row.g-3
                                .col-md-4
                                    label.form-label 銀行名 / Bank Name
                                    input#partner-bank-name.form-control(type="text" placeholder="〇〇銀行")
                                .col-md-4
                                    label.form-label 支店名 / Branch Name
                                    input#partner-bank-branch.form-control(type="text" placeholder="〇〇支店")
                                .col-md-4
                                    label.form-label 口座種別 / Account Type
                                    select#partner-account-type.form-select
                                        option(value="普通") 普通
                                        option(value="当座") 当座
                                .col-md-6
                                    label.form-label 口座番号 / Account Number
                                    input#partner-account-number.form-control(type="text" placeholder="1234567")
                                .col-md-6
                                    label.form-label 口座名義 / Account Holder
                                    input#partner-account-holder.form-control(type="text" placeholder="カ）〇〇")
                        
                        // Notes Section
                        .mb-3
                            h6.fw-bold.text-primary.border-bottom.pb-2
                                i.fas.fa-sticky-note.me-2
                                | メモ / Notes
                            textarea#partner-notes.form-control(rows="3" placeholder="備考があればここに記入...")
                
                .modal-footer
                    button#delete-partner-btn.btn.btn-danger.me-auto(type="button" style="display: none;")
                        i.fas.fa-trash.me-2
                        | 削除
                    button.btn.btn-secondary(type="button" data-bs-dismiss="modal")
                        i.fas.fa-times.me-2
                        | キャンセル
                    button#save-partner-btn.btn.btn-primary(type="submit" form="partner-form")
                        i.fas.fa-save.me-2
                        | 保存

    // Confirm Delete Modal
    .modal.fade#confirm-delete-modal(tabindex="-1")
        .modal-dialog.modal-sm
            .modal-content
                .modal-header.bg-danger.text-white
                    h5.modal-title
                        i.fas.fa-exclamation-triangle.me-2
                        | 削除確認
                    button.btn-close.btn-close-white(type="button" data-bs-dismiss="modal")
                .modal-body.text-center
                    p このパートナーを削除しますか？
                    p.text-muted.small この操作は取り消せません。
                .modal-footer.justify-content-center
                    button.btn.btn-secondary(type="button" data-bs-dismiss="modal") キャンセル
                    button#confirm-delete-btn.btn.btn-danger 削除する

    style.
        .tab-content { display: none; }
        .tab-content.active { display: block; }
        .tab-button.active { 
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
            color: white !important; 
            border-color: #667eea !important;
        }
        .period-btn.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            border-color: #667eea !important;
        }
        .partners-content .nav-tabs {
            border-bottom: 2px solid #e9ecef;
        }
        .partners-content .nav-link {
            border: none;
            border-radius: 0;
            padding: 1rem 1.5rem;
            margin-bottom: -2px;
            position: relative;
            transition: all 0.3s ease;
        }
        .partners-content .nav-link.active::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            border-radius: 2px 2px 0 0;
        }
        .partner-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }
        .partner-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
        }
        .partner-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }
        .partner-card.stopped::before {
            background: linear-gradient(90deg, #dc3545, #c82333);
        }
        .summary-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
            position: relative;
            overflow: hidden;
        }
        .summary-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
        }
        .summary-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }
        .summary-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }
        .summary-value {
            font-size: 2rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }
        .summary-label {
            color: #6c757d;
            font-size: 0.9rem;
            font-weight: 500;
        }
        .status-badge {
            padding: 0.35rem 0.65rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        .status-active { background: #d4edda; color: #155724; }
        .status-partial { background: #fff3cd; color: #856404; }
        .status-stopped { background: #f8d7da; color: #721c24; }
        .status-pending { background: #cfe2ff; color: #084298; }
        .status-inactive { background: #e2e3e5; color: #383d41; }
        .status-not_started { background: #e2e3e5; color: #383d41; }
        .required::after {
            content: ' *';
            color: #dc3545;
        }
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 3rem 0;
            color: white;
            margin: -1rem -1rem 0 -1rem;
        }

    script.
        let currentPeriod = 'current';
        let partnersData = [];
        let historyChart = null;
        let partnerModal, confirmDeleteModal;
        let partnerToDelete = null;

        document.addEventListener('DOMContentLoaded', function() {
            partnerModal = new bootstrap.Modal(document.getElementById('partner-modal'));
            confirmDeleteModal = new bootstrap.Modal(document.getElementById('confirm-delete-modal'));
            
            loadPayments();
            loadPartners();
            loadHistory();
            
            // Period buttons
            document.getElementById('current-period-btn').addEventListener('click', () => setActivePeriod('current'));
            document.getElementById('previous-period-btn').addEventListener('click', () => setActivePeriod('previous'));
            
            // Tab buttons
            document.getElementById('payments-tab').addEventListener('click', () => setActiveTab('payments'));
            document.getElementById('partners-tab').addEventListener('click', () => setActiveTab('partners'));
            document.getElementById('history-tab').addEventListener('click', () => setActiveTab('history'));
            
            // Add partner button
            document.getElementById('add-partner-btn').addEventListener('click', showAddPartnerModal);
            
            // Recalculate button
            document.getElementById('recalculate-btn').addEventListener('click', recalculateActiveDays);
            
            // Partner form submit
            document.getElementById('partner-form').addEventListener('submit', savePartner);
            
            // Delete button
            document.getElementById('delete-partner-btn').addEventListener('click', () => {
                const partnerId = document.getElementById('partner-id').value;
                if (partnerId) {
                    partnerToDelete = partnerId;
                    partnerModal.hide();
                    confirmDeleteModal.show();
                }
            });
            
            // Confirm delete
            document.getElementById('confirm-delete-btn').addEventListener('click', deletePartner);
        });

        function setActivePeriod(period) {
            currentPeriod = period;
            document.querySelectorAll('.period-btn').forEach(btn => {
                btn.classList.remove('active', 'btn-primary');
                btn.classList.add('btn-outline-primary');
            });
            const activeBtn = period === 'current' ? 
                document.getElementById('current-period-btn') : 
                document.getElementById('previous-period-btn');
            activeBtn.classList.remove('btn-outline-primary');
            activeBtn.classList.add('btn-primary', 'active');
            loadPayments();
        }

        function setActiveTab(tab) {
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            document.getElementById(`${tab}-tab`).classList.add('active');
            document.getElementById(`${tab}-view`).classList.add('active');
            
            if (tab === 'history') loadHistory();
        }

        function showAlert(message, type = 'success') {
            const container = document.getElementById('alert-container');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show`;
            alert.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'danger' ? 'exclamation-circle' : 'info-circle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            container.appendChild(alert);
            setTimeout(() => alert.remove(), 5000);
        }

        async function loadPayments() {
            try {
                const response = await fetch(`/api/partners/payments/calculate?period=${currentPeriod}`);
                const data = await response.json();
                
                if (!data.success) throw new Error(data.error);
                
                // Update period info
                document.getElementById('period-info').textContent = 
                    `期間: ${data.period.startDate} ~ ${data.period.endDate}`;
                document.getElementById('total-payment').textContent = 
                    `¥${data.totalPayment.toLocaleString()}`;
                
                // Update summary cards
                const activePartners = data.payments.filter(p => p.status === 'active').length;
                const partialPartners = data.payments.filter(p => p.status === 'partial').length;
                const stoppedPartners = data.payments.filter(p => p.status === 'stopped').length;
                
                document.getElementById('payment-summary-cards').innerHTML = `
                    <div class="col-md-6 col-lg-3">
                        <div class="summary-card">
                            <div class="summary-icon bg-primary bg-opacity-10 text-primary">
                                <i class="fas fa-yen-sign"></i>
                            </div>
                            <div class="summary-value">¥${data.totalPayment.toLocaleString()}</div>
                            <div class="summary-label">総支払予定額</div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="summary-card">
                            <div class="summary-icon bg-success bg-opacity-10 text-success">
                                <i class="fas fa-user-check"></i>
                            </div>
                            <div class="summary-value">${activePartners}</div>
                            <div class="summary-label">フル稼働パートナー</div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="summary-card">
                            <div class="summary-icon bg-warning bg-opacity-10 text-warning">
                                <i class="fas fa-user-clock"></i>
                            </div>
                            <div class="summary-value">${partialPartners}</div>
                            <div class="summary-label">日割りパートナー</div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="summary-card">
                            <div class="summary-icon bg-danger bg-opacity-10 text-danger">
                                <i class="fas fa-user-times"></i>
                            </div>
                            <div class="summary-value">${stoppedPartners}</div>
                            <div class="summary-label">停止パートナー</div>
                        </div>
                    </div>
                `;
                
                // Update payments table
                const tbody = document.getElementById('payments-table-body');
                tbody.innerHTML = data.payments.map((p, i) => `
                    <tr>
                        <td class="py-3 px-3">${i + 1}</td>
                        <td class="py-3 px-3">
                            <a href="https://${p.domain}" target="_blank" class="text-decoration-none">
                                ${p.domain}
                                <i class="fas fa-external-link-alt ms-1 small"></i>
                            </a>
                        </td>
                        <td class="py-3 px-3">
                            <strong>${p.name}</strong>
                            ${p.nameKatakana ? `<br><small class="text-muted">${p.nameKatakana}</small>` : ''}
                        </td>
                        <td class="py-3 px-3">¥${p.monthlyAmount.toLocaleString()}</td>
                        <td class="py-3 px-3">${p.daysActive} / ${p.totalDays}日</td>
                        <td class="py-3 px-3 fw-bold">¥${p.amount.toLocaleString()}</td>
                        <td class="py-3 px-3">
                            <span class="status-badge status-${p.status}">
                                ${getStatusLabel(p.status)}
                            </span>
                        </td>
                        <td class="py-3 px-3">${p.paymentCycle}</td>
                    </tr>
                `).join('');
                
            } catch (error) {
                console.error('Error loading payments:', error);
                showAlert('支払い情報の読み込みに失敗しました', 'danger');
            }
        }

        async function loadPartners() {
            try {
                const response = await fetch('/api/partners');
                const data = await response.json();
                
                if (!data.success) throw new Error(data.error);
                
                partnersData = data.partners;
                
                const container = document.getElementById('partners-cards');
                container.innerHTML = data.partners.map(p => `
                    <div class="col-md-6 col-lg-4">
                        <div class="partner-card ${(p.status || (p.stopDate ? 'stopped' : 'active')) === 'stopped' ? 'stopped' : ''}" onclick="editPartner('${p._id}')">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="mb-1">${p.name}</h5>
                                    <small class="text-muted">${p.nameKatakana || ''}</small>
                                </div>
                                <span class="status-badge ${getStatusBadgeClass(p.status || (p.stopDate ? 'stopped' : 'active'))}">
                                    ${getStatusLabel(p.status || (p.stopDate ? 'stopped' : 'active'))}
                                </span>
                            </div>
                            <p class="mb-2">
                                <i class="fas fa-globe text-primary me-2"></i>
                                <a href="https://${p.domain}" target="_blank" class="text-decoration-none" onclick="event.stopPropagation()">
                                    ${p.domain}
                                </a>
                            </p>
                            <p class="mb-2">
                                <i class="fas fa-yen-sign text-success me-2"></i>
                                ¥${p.monthlyAmount.toLocaleString()} / 月
