extends base

block mainContent
    // Hero Section
    .hero-section.mb-5
        .container
            .row.align-items-center
                .col-md-8
                    h1.display-4.fw-bold.mb-3 ダッシュボード
                    p.lead.text-white データとツールを一箇所で管理
    // Manage Partners Section
    section.partners-section.mb-5
        .container
            h2.section-title.mb-4
                i.fas.fa-handshake.me-2
                | パートナー管理
            .row.g-4
                .col-lg-4.col-md-12.mb-3
                    .card.tool-card.h-100.border-0.shadow-sm
                        .card-body
                            .row.align-items-center
                                .col-2
                                    .icon-wrapper.bg-success.bg-opacity-10.rounded-circle.p-3.text-center
                                        i.fas.fa-chart-line.text-success.fs-4
                                .col-10
                                    h5.card-title.fw-bold.mb-2 アナリティクス
                                    p.card-text.text-muted.mb-0 サイトの分析データとインサイトを表示
                                    a.stretched-link(href="/dashboard/app/analytics")
                
                .col-lg-4.col-md-12.mb-3
                    .card.tool-card.h-100.border-0.shadow-sm
                        .card-body
                            .row.align-items-center
                                .col-2
                                    .icon-wrapper.bg-success.bg-opacity-10.rounded-circle.p-3.text-center
                                        i.fas.fa-yen-sign.text-success.fs-4
                                .col-10
                                    h5.card-title.fw-bold.mb-2 パートナー支払い管理
                                    p.card-text.text-muted.mb-0 パートナーの支払い計算・管理
                                    a.stretched-link(href="/dashboard/app/partners")
                
                .col-lg-4.col-md-12.mb-3
                    .card.tool-card.h-100.border-0.shadow-sm
                        .card-body
                            .row.align-items-center
                                .col-2
                                    .icon-wrapper.bg-info.bg-opacity-10.rounded-circle.p-3.text-center
                                        i.fas.fa-envelope.text-info.fs-4
                                .col-10
                                    h5.card-title.fw-bold.mb-2 パートナーメール管理
                                    p.card-text.text-muted.mb-0 支払い通知メールの作成・送信
                                    a.stretched-link(href="/dashboard/app/partner-emails")
                
                .col-lg-4.col-md-12.mb-3
                    .card.tool-card.h-100.border-0.shadow-sm
                        .card-body
                            .row.align-items-center
                                .col-2
                                    .icon-wrapper.bg-warning.bg-opacity-10.rounded-circle.p-3.text-center
                                        i.fas.fa-users.text-warning.fs-4
                                .col-10
                                    h5.card-title.fw-bold.mb-2 パートナー一覧
                                    p.card-text.text-muted.mb-0 パートナー情報の管理・更新
                                    a.stretched-link(href="/dashboard/app/partner-list")
                
                .col-lg-4.col-md-12.mb-3
                    .card.tool-card.h-100.border-0.shadow-sm
                        .card-body
                            .row.align-items-center
                                .col-2
                                    .icon-wrapper.bg-primary.bg-opacity-10.rounded-circle.p-3.text-center
                                        i.fas.fa-user-plus.text-primary.fs-4
                                .col-10
                                    h5.card-title.fw-bold.mb-2 パートナー募集管理
                                    p.card-text.text-muted.mb-0 新しいパートナーの申請を管理・審査
                                    a.stretched-link(href="/dashboard/app/partner-recruitment")
    
    // Manage Advertisement Section
    section.advertisement-section.mb-5.isAdmin
        .container
            h2.section-title.mb-4
                i.fas.fa-bullhorn.me-2
                | 広告管理
            .row.g-4
                .col-lg-4.col-md-12.mb-3
                    .card.tool-card.h-100.border-0.shadow-sm
                        .card-body
                            .row.align-items-center
                                .col-2
                                    .icon-wrapper.bg-primary.bg-opacity-10.rounded-circle.p-3.text-center
                                        i.fas.fa-flask.text-primary.fs-4
                                .col-10
                                    h5.card-title.fw-bold.mb-2 A/Bテスト
                                    p.card-text.text-muted.mb-0 A/Bテストを作成・管理
                                    a.stretched-link(href="/dashboard/app/ab-test-results")
                
                .col-lg-4.col-md-12.mb-3
                    .card.tool-card.h-100.border-0.shadow-sm
                        .card-body
                            .row.align-items-center
                                .col-2
                                    .icon-wrapper.bg-warning.bg-opacity-10.rounded-circle.p-3.text-center
                                        i.fab.fa-wordpress.text-warning.fs-4
                                .col-10
                                    h5.card-title.fw-bold.mb-2 アフィリエイト
                                    p.card-text.text-muted.mb-0 パートナーアフィリエイトを管理
                                    a.stretched-link(href="/dashboard/app/affiliate/")
                
                .col-lg-4.col-md-12.mb-3
                    .card.tool-card.h-100.border-0.shadow-sm
                        .card-body
                            .row.align-items-center
                                .col-2
                                    .icon-wrapper.bg-info.bg-opacity-10.rounded-circle.p-3.text-center
                                        i.fas.fa-bullhorn.text-info.fs-4
                                .col-10
                                    h5.card-title.fw-bold.mb-2 リファラル
                                    p.card-text.text-muted.mb-0 リファラルポップアップとキャンペーンを管理
                                    a.stretched-link(href="/dashboard/app/referal")
    
    // Quick Actions & Settings Section
    section.quick-actions-section.mb-5
        .container
            .row
                .col-lg-8.mb-4
                    .card.border-0.shadow-sm.h-100
                        .card-header.bg-white.border-0.pb-0
                            h5.fw-bold.mb-0
                                i.fas.fa-rocket.me-2.text-primary
                                | クイックアクション
                        .card-body
                            .row.g-3
                                .col-sm-6
                                    a.btn.btn-primary.w-100.py-3(href="/user/setting")
                                        i.fas.fa-user-cog.me-2
                                        | アカウント設定
                                .col-sm-6
                                    a.btn.btn-outline-primary.w-100.py-3(target="_blank" href="https://hatoltd.com/sell-or-advertise/")
                                        i.fas.fa-building.me-2
                                        | 会社概要
                                .col-sm-6
                                    a.btn.btn-outline-secondary.w-100.py-3(target="_blank" href="https://hatoltd.com/contact/")
                                        i.fas.fa-envelope.me-2
                                        | お問い合わせ
                                .col-sm-6
                                    a.btn.btn-outline-secondary.w-100.py-3(href="#")
                                        i.fas.fa-question-circle.me-2
                                        | ヘルプ
                
                .col-lg-4.mb-4
                    .card.border-0.shadow-sm.h-100
                        .card-header.bg-white.border-0.pb-0
                            h5.fw-bold.mb-0
                                i.fas.fa-bell.me-2.text-warning
                                | お知らせ
                        .card-body
                            if latestNews
                                .news-item
                                    .news-date.text-muted.small.mb-2
                                        i.fas.fa-calendar-alt.me-1
                                        | #{latestNews.date}
                                    .news-content
                                        | #{latestNews.content}
                            else
                                .text-center.py-4
                                    i.fas.fa-inbox.text-muted.display-6.mb-3
                                    p.text-muted.mb-0 現在お知らせはありません
