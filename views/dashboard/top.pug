extends base

block mainContent
    .text-center
        i.fa.fa-home.display-6
    hr.my-4
    
    section.my-5
        .row.row-cols-1.row-cols-md-3.my-5
            .col.mb-3.isAdmin
                a.card.btn.bg-white.px-2(href=`/dashboard/app/affiliate/`)
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fab.fa-wordpress.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | Affiliate
                            p.card-text.text-start.text-muted
                                | List of partner
            .col.mb-3
                a.card.btn.bg-white.px-2(href=`/dashboard/app/ab-test-results`)
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fab.fa-wordpress.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | A/B Test
                            p.card-text.text-start.text-muted
                                | Create A/B test
            .col.mb-3.isAdmin
                a.card.btn.bg-white.px-2(href=`/dashboard/app/referal`)
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fas.fa-bullhorn.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | Referral
                            p.card-text.text-start.text-muted
                                | Manage referral popups
            // Analytics
            .col.mb-3
                a.card.btn.bg-white.px-2(href=`/dashboard/app/analytics`)
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fas.fa-chart-line.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | Analytics
                            p.card-text.text-start.text-muted
                                | View your site analytics
        .row.row-cols-1.row-cols-md-2.my-5
            .col.d-none
                h5.fw-bold
                    i.fas.fa-bell.me-2
                if latestNews
                    .news-item.mt-3
                        .news-date.text-muted
                            | #{latestNews.date}
                        .news-content
                            | #{latestNews.content}
                else
                    p.text-muted.mt-3.px-3 今は何もありません。
            .col 
                h5.fw-bold
                    i.fas.fa-cogs.me-2
                .row.row-cols-1.row-cols-md-2.my-3
                    .col.my-1
                        a.btn.btn-primary.w-100(href="/user/setting") アカウント設定
                    .col.my-1
                        a.btn.btn-primary.w-100(target="_blank" href="https://hatoltd.com/sell-or-advertise/") 会社概要
                    .col.my-1.d-none
                        a.btn.btn-outline-primary.w-100(href="#") 使い方ガイド
                    .col.my-1
                        a.btn.btn-outline-primary.w-100(target="_blank" href="https://hatoltd.com/contact/") お問い合わせ
